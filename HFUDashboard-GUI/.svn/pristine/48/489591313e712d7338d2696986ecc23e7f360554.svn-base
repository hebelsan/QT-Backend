#include <QObject>
#include <QFlags>

class Indicators {
    Q_GADGET
    Q_FLAGS(IndicatorLights)
    Q_ENUMS(IndicatorLight)
public:
    enum IndicatorLight {
        Engine = 0x01,
        CoolantTempHigh = 0x2,
        ESP = 0x10,
        ABS = 0xA0,
        HandBrake = 0xC0
    };
    //Q_ENUM(IndicatorLight)
    Q_DECLARE_FLAGS(IndicatorLights, IndicatorLight)
};

class CruseControl{
    Q_GADGET
    Q_ENUMS(CruseControlMod)
public:
    enum CruseControlMod {
        Off = 0,
        On = 0,
        GreenCar = 2,
        GreenCarDistanz = 3
    };
    //Q_ENUM(CruseControlMod)
};

class Gears{
    Q_GADGET
    Q_ENUMS(Gear)
public:
    enum Gear {
        P = 0x01,
        R = 0x02,
        N = 0x03,
        D = 0x04,
        S = 0x05,
        M = 0x06,
        M_R = 0x07,
        E = 0x08,
        MS = 0x09,
        S_R = 0x0A,
        MS_R = 0x0B
    };
    //Q_ENUM(Gear)
};


